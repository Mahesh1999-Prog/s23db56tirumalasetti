extends layout
 
block content
  h1= title
  -
    let results = [
      {
        "name": "Apple",
        "color": "Red",
        "quantity": 12
      },
      {
        "name": "Banana",
        "color": "Yellow",
        "quantity": 24
      },
      {
        "name": "Orange",
        "color": "Orange",
        "quantity": 6
      },                    
    ]
  div(class= "container-fluid")
    div(class = "row")
      each item,index in results
        div(class= "col-sm-2", onclick=`buy(${index})`) name: #{item.name}
        div(class= "col-sm-2", onclick=`buy(${index})`) color: #{item.color} 
        div(class= "col-sm-2", onclick=`buy(${index})`) quantity: #{item.quantity}
        br
        br
        br
       
  script.
    function buy(index){
      alert(`You purchased item ${index+1}`)
    }
  